<h1>Tareas</h1>

<% if @assignments.present? %>
  <div>Total de tareas: <%= @assignments.count %></div>
  <br>
  
  <% @assignments.each do |assignment| %>
    <div>
      <h3>Titulo de la tarea</h3>
      <%= assignment.title %>
    </div>
    <div>
      <h3>Descripcion de la tarea</h3>
      <%= assignment.description %>
    </div>
    <div>
      <%= link_to 'Show', account_course_assignment_path(@account, @course, assignment) %> |
      <%= link_to 'Edit', edit_account_course_assignment_path(@account, @course, assignment) %> |
      <%= form_with(url: account_course_assignment_path(@course.account, @course, assignment), method: :delete, data: { confirm: 'Do you want to delete this assignment?' }, local: true) do %>
        <%= submit_tag 'Delete' %>
      <% end %>
    </div>
    <br>
    <span>---------------------------------------</span>
    <br>
  <% end %>
<% else %>
  <p>No assignments found.</p>
<% end %>

<br>
<%= link_to 'Crear una nueva tarea', new_account_course_assignment_path(@course.account, @course) %> |
<%= link_to 'Back to home path', account_course_path(@course.account, @course) %> |
